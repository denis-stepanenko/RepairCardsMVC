@using Microsoft.AspNetCore.Identity;
@model EditUserViewModel

<div>
    <a asp-action="Index">Назад</a>
</div>

<h2>Изменить пользователя</h2>

<form method="post">
    <input asp-for="Id" hidden />

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Имя пользователя</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="UserName">
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">ФИО</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Подразделение</label>
        <div class="col-sm-10">
            <input class="form-control" type="number" asp-for="Department" />
            <span class="text-danger" asp-validation-for="Department"></span>
        </div>
    </div>

    <h2>Роли</h2>
    @foreach (IdentityRole role in ViewBag.Roles)
    {
        <input type="checkbox" class="medium" name="roles" value="@role.Name" @(ViewBag.UserRoles.Contains(role.Name) ? "checked" : "") />

        @role.Name

        <br />
    }

    <button class="btn btn-success">Сохранить</button>
</form>