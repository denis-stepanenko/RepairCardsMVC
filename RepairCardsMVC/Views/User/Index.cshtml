@model List<User>

<h2>Пользователи</h2>

<a class="btn btn-dark" asp-action="Create">Создать пользователя</a>

<table class="table">
    <thead class="table-dark">
        <tr>
            <th>Идентификатор</th>
            <th>Имя</th>
            <th>ФИО</th>
            <th>Подразделение</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Name</td>
                <td>@item.Department</td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Изменить</a>
                    <a class="btn btn-info" asp-action="ChangePassword" asp-route-id="@item.Id">Изменить пароль</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>